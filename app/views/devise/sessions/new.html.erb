<div class="ui grid">
  <div class="eleven wide column">
  </div>
  <div class="five wide column">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'ui row form segment'}) do |f| %>
      <h2 class="ui header">Log in</h2>
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: 'SNU Email' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
      </div>

      <div class="ui grid row">
        <% if devise_mapping.rememberable? -%>
          <div class="eight wide column inline field ">
            <div class="ui checkbox">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
        <% end -%>

        <div class="eight wide column right aligned actions">
          <%= f.submit "Log in", class: 'ui submit button' %>
        </div>
      </div>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      <% end -%>
    <% end %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'ui row form segment'}) do |f| %>
      <h2 class="ui header">Sign Up</h2>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, placeholder: 'SNU Email' %>
      </div>

      <div class="field">
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password Confirm' %>
      </div>

      <div class="ui grid row">
        <div class="sixteen wide column right aligned actions">
          <%= f.submit "Sign up", class: 'ui submit button' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
