<div class="ui page centered grid">
  <div class="ten wide column">
    <h1 class="ui header">
      <i class="ui browser icon"></i>
      Listing Courses
    </h1>

    <table class="ui table" id=content>
      <thead>
        <tr>
          <th>Course Name</th>
          <% if admin_signed_in? %>
            <th colspan="2"></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.name %> (<%= course.code %>) - <%= course.prof %></td>
            <% if admin_signed_in? %>
              <td><%= link_to 'Edit', edit_course_path(course) %></td>
              <td><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div style="float: right">
      <div class="ui red tag label">
        <%= link_to 'Add new Course', new_course_path %>
      </div>
    </div>
  </div>
</div>
