<p id="notice"><%= notice %></p>

<div class="ui center aligned compact segment">
  <h1 class="ui header">
    <i class="ui browser icon"></i>
    Listing Courses
  </h1>
  <table class="ui table">
    <thead>
      <tr>
        <th>Course Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.name %> (<%= course.code %>) - <%= course.prof %></td>
          <td><%= link_to 'Show', course %></td>
          <td><%= link_to 'Edit', edit_course_path(course) %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<div class="ui red tag label">
  <%= link_to 'Add new Course', new_course_path %>
</div>
